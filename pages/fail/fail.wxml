<!--pages/fail/fail.wxml-->
<view class="fail-page">
  <!-- 审核失败页面 -->
  <view class="weui-form">
    <view class="weui-form__text-area">
      <view class="weui-form__title">审核<text style="color: #fa5151;">不通过</text></view>
      <!-- <view class="weui-form__desc">请在下方输入审核不通过的原因</view> -->
    </view>
    <view class="weui-form__control-area">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells weui-cells_form">
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__bd">
              <textarea class="weui-textarea" placeholder="请输入不予通过的原因，可为空" bindinput="handleInput"></textarea>
              <!-- <view class="weui-textarea-counter">
                <text>0</text>/200
              </view> -->
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="weui-form__opr-area">
      <a class="weui-btn weui-btn_primary" bindtap="submitEvent">确定</a>
    </view>
  </view>
</view>
