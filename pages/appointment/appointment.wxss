.admission-page {
  background-color: var(--bgColor1);
}
.admission-page .header-title__box {
  width: 100vw;
  position: relative;
  line-height: 110rpx;
}
.admission-page .header-title__box .title {
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
}
.admission-page .header-title__box .search-icon {
  position: absolute;
  width: 40rpx;
  top: 0rpx;
  right: 34rpx;
  font-size: 44rpx;
}
.admission-page .nav-bar__box {
  width: 100vw;
  height: 64rpx;
  background-color: var(--bgColor1);
  display: flex;
  line-height: 64rpx;
}
.admission-page .nav-bar__box .nav-item {
  width: 50%;
  text-align: center;
}
.admission-page .nav-bar__box .nav-active {
  color: var(--mainColor);
  font-weight: 700;
  font-size: 36rpx;
}
.admission-page .scroll-contanier {
  width: 100%;
  height: calc(100vh - 174rpx);
  box-sizing: border-box;
  background-color: var(--bgColor1);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.admission-page .scroll-contanier .last-iem {
  margin-bottom: 300rpx;
}
.admission-page .scroll-contanier .list-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.admission-page .scroll-contanier .list-item {
  margin-top: 32rpx;
  width: calc(100vw - 64rpx);
  background-color: var(--bgColor2);
  border-radius: 10rpx;
  padding: 32rpx;
  padding-bottom: 64rpx;
  box-sizing: border-box;
}
.admission-page .scroll-contanier .list-item .list-item__tip {
  padding: 32rpx 0rpx;
  position: relative;
  display: flex;
}
.admission-page .scroll-contanier .list-item .list-item__tip .status-img {
  width: 108rpx;
  height: 85rpx;
  position: absolute;
  right: 16rpx;
  top: 16rpx;
}
.admission-page .scroll-contanier .list-item .list-item__cell {
  padding-bottom: 16rpx;
  display: flex;
}
.admission-page .scroll-contanier .list-item .list-item__cell .list-item__title {
  color: var(--msgBoxTitle);
  width: 192rpx;
}
.admission-page .scroll-contanier .list-item .list-item__cell .list-item__content {
  box-sizing: border-box;
  width: calc(100% - 192rpx);
}
.admission-page .scroll-contanier .list-item .list-item__operation {
  margin-top: 32rpx;
  display: flex;
}
.admission-page .scroll-contanier .list-item .list-item__operation a {
  padding: 16rpx 112rpx;
}
