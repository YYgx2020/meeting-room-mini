.search-page {
  background-color: #ededed;
  height: 100vh;
}
.search-page .search-box {
  width: 100vw;
  height: 100%;
  padding-top: 42rpx;
  box-sizing: border-box;
}
.search-page .search-box .conditional-search-bar {
  padding: 0rpx 32rpx;
}
.search-page .search-box .conditional-search-bar .title-tip {
  line-height: 64rpx;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.6);
}
.search-page .search-box .conditional-search-bar .search-bar__item {
  padding: 32rpx 0rpx;
  width: 100%;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search-page .search-box .conditional-search-bar .search-bar__item .item__hd {
  width: 280rpx;
}
.search-page .search-box .conditional-search-bar .search-bar__item .item__bd {
  width: calc(100% - 280rpx);
}
.search-page .search-result {
  padding-top: 64rpx;
}
.search-page .search-result .result-item {
  width: 100%;
  height: 144rpx;
  line-height: 144rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 12rpx 32rpx;
  box-sizing: border-box;
  background-color: #fff;
  position: relative;
}
.search-page .search-result .result-item .cover {
  width: 96rpx;
  height: 96rpx;
}
.search-page .search-result .result-item .cover image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.search-page .search-result .result-item .room-info {
  padding-left: 32rpx;
}
.search-page .search-result .result-item .room-info .name {
  line-height: 60rpx;
  font-weight: 700;
  font-size: 36rpx;
}
.search-page .search-result .result-item .room-info .address {
  line-height: 60rpx;
  color: rgba(0, 0, 0, 0.8);
}
.search-page .search-result .result-item .number {
  padding-left: 32rpx;
  height: 144rpx;
}
.search-page .search-result .result-item .status {
  font-size: 42rpx;
  position: absolute;
  right: 32rpx;
}
.search-page .search-result .result-item .status .wait {
  position: relative;
}
.search-page .search-result .result-item .status .wait::after {
  content: '';
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: red;
  border-radius: 8rpx;
}
.search-page .search-result .result-item::after {
  content: '';
  position: absolute;
  width: 80%;
  height: 1rpx;
  background-color: rgba(0, 0, 0, 0.1);
  bottom: 0rpx;
  left: 20%;
}
