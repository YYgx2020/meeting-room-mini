      <text></text>
    </view>
    <view class="date-tip-text-box" wx:if="{{ showDateTip }}">
      <view class="__left">
        <text>以下是<text style="color: #07c160;">{{ date }}</text>的审核记录</text>
      </view>
      <view class="__right" bindtap="resetDate">
        <text>重选</text>
      </view>
    </view> -->
    <view class="date-tip-text-box" wx:if="{{showTip}}">
      <view class="__left">
        <text>以下是<text style="color: #07c160;">{{ keyWord }}</text>的搜索</text>
      </view>
      <view class="__right" bindtap="resetDate">
        <text>重选</text>
      </view>
    </view>

    <!-- 搜索结果展示 -->
    <scroll-view class="search-result__scroll" enable-flex="{{true}}">
      <view class="search-result">
        <view class="meeting-room-item" wx:for="{{searchResult}}" wx:key="id" bindtap="navToRoomDetail" data-item="{{item}}">
          <view class="room-cover">
            <image mode="aspectFill" src="{{item.cover}}"></image>
          </view>
          <view class="item-content">
            <view class="label">
              <icon class="label-icon iconfont icon-biaoqian"></icon>
              <text>{{item.code}}</text>
            </view>
            <view class="label">
              <icon class="label-icon iconfont icon-dizhi"></icon>
              <text>{{item.address}}</text>
            </view>
            <view class="label">
              <icon class="label-icon iconfont icon-renshu"></icon>
              <text>可容纳人数：</text>
              <text style="font-size: 44rpx; font-weight: 700;">{{item.number}}</text>
            </view>
          </view>
        </view>
      </view>
    </scroll-view>
  </block>
</view>